<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PresentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent">


            <LinearLayout
                android:id="@+id/menu_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@color/background" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:textColor="#989898"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:text="Подарок"/>
                <ImageButton
                    android:id="@+id/close_btn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:background="@color/background"
                    android:src="@drawable/ic_close_black_24dp"/>


            </LinearLayout>
        <RelativeLayout
            android:id="@+id/card_present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_background"
            android:layout_below="@id/menu_linear">

            <ImageView
                android:id="@+id/pic_gift"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>
            <TextView
                android:id="@+id/title_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="@string/sertificate_100"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/pic_gift"/>

            <TextView
                android:id="@+id/conditions_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="@string/conditions_of_use"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_below="@id/title_gift"/>
            <TextView
                android:id="@+id/conditions_of_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="23sp"
                android:layout_below="@id/conditions_text"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/validity_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="@string/validity_txt"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_below="@id/conditions_of_use"/>
            <TextView
                android:id="@+id/validity_gift_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="12.10.2019"
                android:textSize="23sp"
                android:layout_toRightOf="@id/validity_gift"
                android:layout_below="@id/conditions_of_use"
                android:paddingLeft="8dp"
                android:layout_marginBottom="16dp"/>


        </RelativeLayout>

    </LinearLayout>



</ScrollView>