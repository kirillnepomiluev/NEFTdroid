<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profileActivity"
    tools:showIn="@layout/app_bar_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@color/background"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#989898"
            android:textSize="28sp"
            android:text="@string/profil"/>

        <ImageButton
            android:id="@+id/redact_profile_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center_vertical"
            android:background="@color/background"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/pencil_icon"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_user"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/name_user_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textColor="#989898"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""/>

        <LinearLayout
            android:id="@+id/identity_layout"
            android:orientation="horizontal"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_background" >

            <ImageView
                android:id="@+id/identity_mark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cross_mark"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/identity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/not_identyfy"
                android:layout_gravity="center_horizontal|center_vertical"/>


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/lightGray"
        android:textStyle="italic"
        android:visibility="gone"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/numberphone"
                android:textSize="16sp"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/phonenumber_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dateBirth"
                android:textSize="16sp"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/dateBirth_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/passport_number"
                android:textSize="16sp"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/passport_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/address"
                android:textSize="16sp"
                android:typeface="serif"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:typeface="serif"
                android:textColor="@android:color/white" />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/order_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle"
        android:text="Заказать беcплатную топливную карту"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"/>

</LinearLayout>
