<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/friend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Имя Фамилия"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/photo"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Страна, город"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/photo"
            android:layout_below="@id/name"/>
        <LinearLayout
            android:id="@+id/level_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/photo"
            android:layout_below="@id/address">
            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="уровень"
                android:paddingLeft="4dp"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/friend_layout"
        android:background="@color/transparentwhite"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dateReg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата регистрации:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dateReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD.MM.YYYY"
                android:paddingLeft="4dp"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sponsor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спонсор:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя Фамилия"
                android:paddingLeft="4dp"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+x-xxx-xxx-xx-xx"
                android:paddingLeft="4dp"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/partners_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Партнеры:"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/partners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя Фамилия"
                android:paddingLeft="4dp"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>